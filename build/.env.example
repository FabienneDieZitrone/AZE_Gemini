# AZE Gemini Environment Configuration Example
# Copy this file to .env and update with your actual values

# OAuth Configuration
OAUTH_CLIENT_ID=your_azure_client_id_here
OAUTH_CLIENT_SECRET=your_azure_client_secret_here
OAUTH_TENANT_ID=your_azure_tenant_id_here
OAUTH_REDIRECT_URI=https://your-domain.com/api/auth-callback.php

# Database Configuration
DB_HOST=localhost
DB_NAME=aze_database
DB_USER=aze_user
DB_PASS=your_database_password_here

# Session Configuration
SESSION_LIFETIME=86400
SESSION_SECURE=true
SESSION_HTTPONLY=true
SESSION_SAMESITE=Strict

# Application Settings
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com

# Security Settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=warning
LOG_FILE=/var/log/aze/app.log