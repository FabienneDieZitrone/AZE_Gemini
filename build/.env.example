# AZE Gemini - Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control!

# Application Environment (development|production)
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:5173

# Security Keys (generate with: openssl rand -hex 32)
APP_KEY=your-32-character-app-key-here
SESSION_SECRET=your-session-secret-here

# OAuth Configuration (Azure AD)
OAUTH_CLIENT_ID=your-azure-client-id
OAUTH_CLIENT_SECRET=your-azure-client-secret
OAUTH_TENANT_ID=your-azure-tenant-id
OAUTH_REDIRECT_URI=https://yourdomain.com/api/auth-callback.php

# Database Configuration
DB_HOST=localhost
DB_NAME=aze_database
DB_USER=database_user
DB_PASS=database_password
DB_PORT=3306

# Session Configuration
SESSION_LIFETIME=86400
SESSION_SECURE=false
SESSION_HTTPONLY=true
SESSION_SAMESITE=Lax
SESSION_DOMAIN=.yourdomain.com

# Security Settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_IP_MAX=300

# CSRF Protection
CSRF_TOKEN_NAME=csrf_token
CSRF_TOKEN_LIFETIME=3600

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/aze/app.log
LOG_MAX_FILES=7

# Email Configuration (optional)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="AZE Gemini"

# FTP Configuration (production only)
FTP_HOST=
FTP_USER=
FTP_PASS=
FTP_PATH=/www/

# Monitoring
MONITORING_ENABLED=true
MONITORING_INTERVAL=300

# API Configuration
API_RATE_LIMIT=60
API_TIMEOUT=30

# Timezone
APP_TIMEZONE=Europe/Berlin

# Cache Configuration
CACHE_DRIVER=file
CACHE_PATH=/tmp/aze_cache

# Feature Flags
FEATURE_EXPORT_ENABLED=true
FEATURE_OAUTH_ENABLED=true
FEATURE_MONITORING_ENABLED=true