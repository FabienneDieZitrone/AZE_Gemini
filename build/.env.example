# AZE Gemini - Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit the actual .env file to version control

# OAuth Configuration (Azure AD)
OAUTH_CLIENT_ID=your-client-id-here
OAUTH_CLIENT_SECRET=your-client-secret-here
OAUTH_TENANT_ID=your-tenant-id-here
OAUTH_REDIRECT_URI=https://your-domain.com/api/auth-callback.php

# Database Configuration
DB_HOST=localhost
DB_NAME=your-database-name
DB_USER=your-database-user
DB_PASS=your-database-password
DB_PORT=3306

# Session Configuration
SESSION_LIFETIME=86400
SESSION_SECURE=true
SESSION_HTTPONLY=true
SESSION_SAMESITE=Lax

# Application Settings
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com

# Security Settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Security Keys (generate new random values)
APP_KEY=generate-a-new-64-character-random-string
SESSION_SECRET=generate-another-64-character-random-string

# CSRF Protection
CSRF_TOKEN_NAME=csrf_token
CSRF_TOKEN_LIFETIME=3600

# Logging
LOG_LEVEL=error
LOG_FILE=/var/log/aze/app.log