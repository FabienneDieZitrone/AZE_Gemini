# AZE-Gemini Environment Configuration
# Copy this file to .env and configure for your environment

# Database Configuration
DB_HOST=localhost
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=your_db_name

# Azure AD OAuth Configuration
OAUTH_CLIENT_SECRET=your_azure_client_secret
OAUTH_CLIENT_ID=your_azure_client_id
OAUTH_TENANT_ID=your_azure_tenant_id
OAUTH_REDIRECT_URI=https://yourdomain.com/auth/callback

# Application Configuration
APP_ENV=production
APP_DEBUG=false
APP_URL=https://yourdomain.com

# Security Configuration
# Generate with: php -r "echo base64_encode(random_bytes(32));"
ENCRYPTION_KEY=your_32_character_encryption_key_here
SESSION_SECRET=your_session_secret_key_here

# MFA Configuration (Issue #115)
# This key is used to encrypt TOTP secrets and backup codes
# CRITICAL: Use a different key than ENCRYPTION_KEY for MFA
# Generate with: php -r "echo base64_encode(random_bytes(32));"
MFA_ENCRYPTION_KEY=your_mfa_specific_encryption_key_here

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/aze-gemini/app.log

# FTP Deploy (optional)
FTP_HOST=ftp.your-host.de
FTP_USER=your_ftp_username
FTP_PASS=your_ftp_password
FTP_BASE_PATH=/              # e.g. /, /aze, /htdocs/aze

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME="AZE Zeiterfassung"

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups/aze-gemini

# Performance Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
OPCACHE_ENABLED=true

# Development Configuration (only for development)
DEV_MODE=false
DEBUG_SQL=false
SHOW_ERRORS=false

# Migration Runner (guard)
MIGRATION_KEY=change_me_for_deploy
