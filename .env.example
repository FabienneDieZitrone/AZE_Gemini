# AZE Gemini Environment Configuration
# Copy this file to .env and fill in the actual values
# NEVER commit the actual .env file to version control!

# FTP Deployment Configuration
FTP_HOST=wp10454681.server-he.de
FTP_USER=ftp10454681-aze
FTP_PASS=your-ftp-password-here
# Base directory of the FTP user on the server. For HostEurope + subdomain aze.mikropartner.de this is /www/it/aze
FTP_BASE_DIR=/www/it/aze
# Optional overrides if you deploy tests elsewhere
FTP_PROD_PATH=/www/it/aze/
FTP_TEST_PATH=/www/it/aze-test/

# Database Configuration
DB_HOST=localhost
DB_NAME=aze_zeiterfassung
DB_USER=your-database-user
DB_PASS=your-database-password

# Database Backup Configuration (Issue #113)
BACKUP_DIR=/var/backups/aze-gemini/mysql
BACKUP_RETENTION_DAYS=7
BACKUP_COMPRESS=true
BACKUP_MAX_AGE_HOURS=25
BACKUP_MIN_SIZE_MB=1
BACKUP_ALERT_EMAIL=admin@example.com

# Remote Backup Configuration (Optional)
REMOTE_BACKUP_ENABLED=false
REMOTE_FTP_PATH=/backups/mysql/

# Azure AD OAuth Configuration
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_REDIRECT_URI=https://aze.mikropartner.de/api/oauth-callback.php

# Application Settings
APP_ENV=production
APP_DEBUG=false
APP_URL=https://aze.mikropartner.de

# Session Configuration
SESSION_LIFETIME=86400
SESSION_INACTIVE_TIMEOUT=3600
SESSION_REGENERATE_TIME=1800

# Security Settings
CSRF_TOKEN_LIFETIME=86400
ALLOWED_ORIGINS=https://aze.mikropartner.de
