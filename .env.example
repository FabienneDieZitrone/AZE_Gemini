# AZE Gemini Environment Configuration
# Copy this file to .env and fill in the actual values
# NEVER commit the actual .env file to version control!

# FTP Deployment Configuration
FTP_HOST=wp10454681.server-he.de
FTP_USER=ftp10454681-aze
FTP_PASS=your-ftp-password-here
FTP_PROD_PATH=/www/aze/
FTP_TEST_PATH=/www/aze-test/

# Database Configuration (for future backup automation)
DB_HOST=localhost
DB_NAME=your-database-name
DB_USER=your-database-user
DB_PASS=your-database-password

# Azure AD OAuth Configuration
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_REDIRECT_URI=https://aze.mikropartner.de/api/oauth-callback.php

# Application Settings
APP_ENV=production
APP_DEBUG=false
APP_URL=https://aze.mikropartner.de

# Session Configuration
SESSION_LIFETIME=86400
SESSION_INACTIVE_TIMEOUT=3600
SESSION_REGENERATE_TIME=1800

# Security Settings
CSRF_TOKEN_LIFETIME=86400
ALLOWED_ORIGINS=https://aze.mikropartner.de